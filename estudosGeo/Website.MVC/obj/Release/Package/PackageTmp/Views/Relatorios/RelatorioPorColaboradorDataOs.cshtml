
@{
    ViewBag.Title = "RelatorioPorColaboradorDataOs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    @Styles.Render("~/Content/datatable")
}

@Html.AntiForgeryToken()
<div id="div_barra_carregamento">
    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
            CARREGANDO...
        </div>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading text-center"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Cidades</div>
    <div class="panel-body">

        <div class="col-md-3">
            <div class="input-group input-group-md" id="selectNomeDiv">
                <span class="input-group-addon"><b>Colaborador</b></span>
                <select class="form-control" id="selectNome" onchange="Global.get().OnChangeDataPublicacao();">
                    <option value="0">---</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group input-group-md" id="selectDataDiv">
                <span class="input-group-addon"><b>Data Trabalhada</b></span>
                <select class="form-control" id="selectData" onchange="Global.get().OnChangeNumeroOs()">
                    <option value="0">---</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group input-group-md" id="selectOsDiv">
                <span class="input-group-addon"><b>Ordem de Serviço</b></span>
                <select class="form-control" id="selectOs">
                    <option value="0">---</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-block" onclick="Global.get().CriaRelatorioGeral();"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Carregar</button>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/datatable")
    <script src="~/Scripts/xlsx.core.js"></script>
    <script src="~/Scripts/xlsx.js"></script>
    <script src="~/Scripts/FileSaver.js"></script>
    <script src="~/Scripts/tableexport.js"></script>
    <script src="~/Scripts/relatorioComponentesCalaborador.js"></script>
}