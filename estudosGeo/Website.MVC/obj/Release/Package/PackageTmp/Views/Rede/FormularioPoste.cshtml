<!-- Modal fullscreen EditPoste -->
<div class="modal modal-fullscreen fade" id="ModalEditPoste" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="panel panel-primary margin-top-forms">
                <div class="panel-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="col-md-12">
                        <h3 class="text-center text-primary"><b>EDITAR POSTE</b></h3>
                    </div>
                    <div class="col-md-6 margin-top-forms">
                        <div class="input-group">
                            <span class="input-group-addon">Latitude</span>
                            <input type="text" class="form-control EditPoste" id="input_Latitude" />
                        </div>
                        <div class="margin-top-forms">
                            <button class="btn btn-danger" onclick="GlobalMaps.get().MovePosteCima();"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></button>
                            <button class="btn btn-warning" onclick="GlobalMaps.get().MovePosteBaixo();"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></button>
                        </div>
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Longitude</span>
                            <input type="text" class="form-control EditPoste" id="input_Longitude" />
                        </div>
                        <div class="margin-top-forms">
                            <button class="btn btn-danger" onclick="GlobalMaps.get().MovePosteEsquerda();"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></button>
                            <button class="btn btn-warning" onclick="GlobalMaps.get().MovePosteDireita();"><span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></button>
                        </div>
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Altura</span>
                            <input type="number" class="form-control" id="altura_poste" />
                        </div>
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Esforço</span>
                            <input type="text" class="form-control text-uppercase" id="esforco_poste" maxlength="10" />
                        </div>
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Tipo Poste</span>
                            @Html.DropDownList("tipo_poste", Website.MVC.Models.Util.EnumConvert.GetEnumSelectList<Website.BLL.Enums.TipoPoste>(), new { @class = "form-control" })
                        </div>
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Descrição</span>
                            <textarea class="form-control text-uppercase" id="descricao_poste" rows="3" maxlength="500"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 margin-top-forms">
                        <div id="carouselposte" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators" id="ol-carouselposte"></ol>
                            <div class="carousel-inner" role="listbox" id="div-carouselposte"></div>
                            <a class="left carousel-control" href="#carouselposte" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#carouselposte" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                        <div class="col-md-6 margin-top-forms">
                            <button type="button" class="btn btn-primary btn-block" onclick="GlobalMaps.get().AddFoto();">ADICIONAR FOTO</button>
                        </div>
                    <div class="col-md-12 margin-top-forms">
                        <div class="panel panel-default">
                            <div class="panel-body" id="div_fotos">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <hr />
                        <button type="button" class="btn btn-primary" onclick="GlobalMaps.get().VoltarOpcoesPoste();"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span> Voltar </button>
                        <button type="submit" class="btn btn-success" onclick="GlobalMaps.get().SalvarEdicaoPoste();"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Salvar</button>
                        <button class="btn btn-danger" onclick="GlobalMaps.get().CancelEditPoste();"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar</button>
                        <button type="submit" class="btn btn-info" onclick="GlobalMaps.get().AbreStreetView();"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Abre Street</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
