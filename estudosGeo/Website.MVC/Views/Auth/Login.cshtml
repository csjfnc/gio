@model Website.MVC.Models.LoginViewModel
@{ Layout = null; }

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visium Geo - Login</title>
    <link href="@Href("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Href("~/Content/login.css")" rel="stylesheet" />
    <script src="@Href("~/Scripts/jquery-1.12.3.js")"></script>
    <script src="@Href("~/Scripts/bootstrap.min.js")"></script>
</head>
<body id="bodyLogin">
    <div class="container">
        <div class="col-md-offset-4 col-md-4" style="margin-top:100px;">
            <div class="col-md-12">
                <h2 class="text-center" style="color: #FFF;"><img src="@Href("~/Images/logo_bol.png")" /> VISIUM GEO</h2>
            </div>
            <div id="caixalogin">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Auth/Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class=" col-md-12">
                                <input type="submit" value="Login" class="btn btn-danger btn-block" />
                            </div>
                        </div>
                    }
                    @if (ViewContext.ViewData.ModelState["Error"] != null)
                    {
                        @Html.ValidationSummary(false, null, new { @class = "alert alert-danger" })
                    }
                </section>
            </div>
            <div class="text-center" style="margin-top: 20px;">
                <span class="label label-default">Version: @ViewContext.Controller.GetType().Assembly.GetName().Version</span>
            </div>
        </div>
    </div>
</body>
</html>
