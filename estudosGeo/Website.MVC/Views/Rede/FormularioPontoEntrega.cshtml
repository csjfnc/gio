                    </div>
                    <div class="col-md-6 margin-top-forms">
                        <div class="input-group margin-top-forms">
                            <span class="input-group-addon">Classe Social</span>
                            @Html.DropDownList("classe_social_ponto_entrega", Website.MVC.Models.Util.EnumConvert.GetEnumSelectList<Website.BLL.Enums.ClasseSocial>(), new { @class = "form-control" })
                        </div>
