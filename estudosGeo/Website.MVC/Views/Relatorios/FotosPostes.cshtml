@{ ViewBag.Title = "Fotos Postes"; Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css {
    @Styles.Render("~/Content/datatable")
    @Styles.Render("~/Content/Pace")
}

@section scripts {
    @Scripts.Render("~/bundles/datatable")
    <script type="text/javascript">
        $(document).ready(function () { $('#posteView').DataTable(); });
    </script>
}

@Html.AntiForgeryToken()

<div class="container margin-top-forms">

    @using (Html.BeginForm("FotosPostes", "Relatorios", FormMethod.Post))
    {
        <div class="panel panel-primary">
            <div class="panel-heading">Filtro</div>
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="input-group input-group-md">
                        <span class="input-group-addon"><b>CIDADE</b></span>
                        @Html.DropDownList("IdCidade", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> Carregar</button>
                </div>
            </div>
        </div>
    }


    <div class="panel panel-primary margin-top-forms">
        <div class="panel-heading">
            <h3 class="panel-title text-center"><span class="glyphicon glyphicon-camera"></span> Relatórios de Fotos Com Problemas</h3>
        </div>
        <div class="panel-body">
            <table id="posteView" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>OS</th>
                        <th>Poste</th>
                        <th>Foto</th>
                        <th>Diretório Foto</th>
                        <th>Existe HD</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.NumeroOS</th>
                            <th>@item.CodBDGeoPoste</th>
                            <th>@item.NumeroFoto</th>
                            <th>@item.DiretorioFoto</th>
                            <th>@item.ExisteHD</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
